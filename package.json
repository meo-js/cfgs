{
  "name": "@meojs/cfgs",
  "version": "2.0.27",
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=20"
  },
  "description": "Meo's development configurations.",
  "author": {
    "name": "SmallMain",
    "email": "smallmain@outlook.com",
    "url": "https://www.smallmain.com/"
  },
  "homepage": "https://www.smallmain.com/",
  "repository": "github:meo-js/cfgs",
  "bugs": "https://github.com/meo-js/cfgs/issues",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "index.js",
  "types": "./types/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "rimraf ./types && npx tsc index.js --declaration --emitDeclarationOnly --allowJs --lib dom,esnext --skipLibCheck --outDir ./types",
    "dev": "pnpm run build --watch",
    "eslint:inspect": "pnpx @eslint/config-inspector --config eslint/test.js",
    "prepack": "pnpm run build",
    "publish:patch": "pnpm version patch && pnpm publish",
    "publish:minor": "pnpm version minor && pnpm publish",
    "publish:major": "pnpm version major && pnpm publish"
  },
  "peerDependencies": {
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.8.3"
  },
  "peerDependenciesMeta": {
    "prettier-plugin-organize-imports": {
      "optional": true
    },
    "prettier-plugin-tailwindcss": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.1",
    "@eslint/compat": "^1.2.7",
    "@eslint/js": "^9.22.0",
    "@html-eslint/eslint-plugin": "^0.36.0",
    "@html-eslint/parser": "^0.36.0",
    "eslint": "^9.22.0",
    "eslint-plugin-jsdoc": "^52.0.4",
    "eslint-plugin-n": "^17.16.2",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.5.3",
    "typescript-eslint": "^8.26.1"
  },
  "devDependencies": {
    "@types/node": "^20",
    "rimraf": "^6.0.1"
  }
}
